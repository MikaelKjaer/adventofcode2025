{
  "version": 10,
  "configurePresets": [
    {
      "name": "linux-base",
      "displayName": "Linux x64",
      "description": "Target Linux.",
      "generator": "Ninja",
      "hidden" : true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "strategy": "external",
        "value": ""
      },
      "warnings": { "dev": false },
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPERIMENTAL_CXX_IMPORT_STD": "d0edc3af-4c50-42ea-a356-e2862fe7a444",
        "CMAKE_CXX_STANDARD_REQUIRED": {
          "type": "Boolean",
          "value": "OFF"
        },
        "CMAKE_CXX_MODULE_STD" : "1",
        "CMAKE_CXX_EXTENSIONS": {
          "type": "Boolean",
          "value": "ON"
        },
        "CMAKE_CXX_SCAN_FOR_MODULES": {
          "type": "Boolean",
          "value": "ON"
        }
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "gcc15"
        }
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug x64",
      "description": "Target Linux for a debug build",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release x64",
      "description": "Target Linux for a release build",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Linux Debug build",
      "description": "Inherits environment from base configurePreset",
      "configurePreset": "linux-debug",
      "inheritConfigureEnvironment": true,
      "verbose": true,
      "configuration": "Debug"
    },
    {
      "name": "Linux Clean and Debug Build",
      "description": "Clean before build (--clean-first)",
      "configurePreset": "linux-debug",
      "inherits": "Linux Debug build",
      "cleanFirst": true
    },
    {
      "name": "Linux Release build",
      "description": "Inherits environment from base configurePreset",
      "configurePreset": "linux-release",
      "inheritConfigureEnvironment": true,
      "verbose": true,
      "cleanFirst": false,
      "configuration": "Release"
    },
    {
      "name": "Linux Clean and Release build",
      "description": "Inherits environment from base configurePreset",
      "configurePreset": "linux-release",
      "inheritConfigureEnvironment": true,
      "verbose": true,
      "cleanFirst": true,
      "configuration": "Release"
    }
  ]
}
